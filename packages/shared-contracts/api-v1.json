{
  "version": "0.1.0",
  "baseUrl": "/api/v1",
  "endpoints": [
    {
      "method": "GET",
      "path": "/health",
      "response": {
        "status": "ok",
        "service": "isomp-api"
      }
    },
    {
      "method": "GET",
      "path": "/posts/feed",
      "response": {
        "posts": [
          {
            "id": "string",
            "author": "string",
            "channel": "string",
            "caption": "string",
            "transcript": "string",
            "imageDescription": "string",
            "likes": 0,
            "comments": 0,
            "shares": 0
          }
        ]
      }
    },
    {
      "method": "POST",
      "path": "/posts",
      "request": {
        "author": "string",
        "channel": "string",
        "caption": "string",
        "transcript": "string",
        "imageDescription": "string"
      },
      "response": {
        "id": "string",
        "author": "string",
        "channel": "string",
        "caption": "string",
        "transcript": "string",
        "imageDescription": "string",
        "likes": 0,
        "comments": 0,
        "shares": 0
      }
    },
    {
      "method": "POST",
      "path": "/onboarding/recommendations",
      "request": {
        "abilities": ["visual", "hearing", "motor"]
      },
      "response": {
        "recommendedFeatures": ["textToSpeech", "imageToSpeech"]
      }
    },
    {
      "method": "POST",
      "path": "/captions/transcribe",
      "request": {
        "mediaId": "string",
        "language": "en"
      },
      "response": {
        "mediaId": "string",
        "transcript": "string",
        "confidence": 0.79,
        "disclaimer": "string"
      }
    },
    {
      "method": "GET",
      "path": "/profile/me",
      "response": {
        "handle": "string",
        "bio": "string",
        "followers": 0,
        "following": 0
      }
    },
    {
      "method": "PUT",
      "path": "/profile/me",
      "request": {
        "handle": "string",
        "bio": "string"
      },
      "response": {
        "handle": "string",
        "bio": "string",
        "followers": 0,
        "following": 0
      }
    }
  ]
}
